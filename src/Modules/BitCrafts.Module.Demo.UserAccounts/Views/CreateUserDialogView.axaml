<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="600" Height="350"
             x:Class="BitCrafts.Module.Demo.UserAccounts.Views.CreateUserDialogView">

    <StackPanel Margin="10">
        <TextBlock Text="First Name:" />
        <TextBox x:Name="FirstNameTextBox" />

        <TextBlock Text="Last Name:" />
        <TextBox x:Name="LastNameTextBox" />

        <TextBlock Text="Email:" />
        <TextBox x:Name="EmailTextBox" />

        <TextBlock Text="Password:" />
        <TextBox x:Name="PasswordTextBox" PasswordChar="*" />

        <CheckBox x:Name="IsActiveCheckBox" Content="Is Active" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Save" Margin="5,0" Click="SaveButton_OnClick" />
            <Button x:Name="ClearButton" Content="Clear" Margin="5,0" Click="ClearButton_OnClick" />
        </StackPanel>
    </StackPanel>
</UserControl>