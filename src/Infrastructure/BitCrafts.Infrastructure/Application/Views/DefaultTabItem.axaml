<TabItem xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
         x:Class="BitCrafts.Infrastructure.Application.Views.DefaultTabItem">
    <TabItem.Header>

        <Grid MinWidth="150" Grid.ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch" Margin="2">
            <TextBlock VerticalAlignment="Center" x:Name="TitleTextBox" Grid.Column="0" Text="Title" />
            <Button Grid.Column="1" BorderThickness="0" Click="Button_OnClick"
                    BorderBrush="DarkSlateGray" Content="X" CornerRadius="0" VerticalAlignment="Center"
                    HorizontalAlignment="Right" />
        </Grid>
    </TabItem.Header>

    <ContentControl x:Name="MainContent" />

</TabItem>