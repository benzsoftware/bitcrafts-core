<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BitCrafts.Application.Avalonia.Controls.Loading.LoadingControl">
    <Border Background="DarkSlateGray" Opacity="0.7" IsVisible="True" x:Name="LoadingOverlay">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
            <ProgressBar IsIndeterminate="True" Width="200" Height="10" Foreground="BlanchedAlmond" />
            <TextBlock x:Name="LoadingMessageTextBox" Text="Loading, please wait..." Foreground="White"
                       HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>