<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
        Width="600"
        Height="200"
        CanResize="False"
        x:Class="BitCrafts.Application.Avalonia.Dialogs.ErrorMessageDialog"
        xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Title="Error">
    <Grid ColumnDefinitions="Auto,*" Margin="24">
        <icons:MaterialIcon Kind="Error" Width="32" Height="32" Foreground="OrangeRed"
                            Margin="0,0,12,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <TextBlock x:Name="ErrorMessageTextBlock" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Top"
                   HorizontalAlignment="Left" />

    </Grid>
</Window>