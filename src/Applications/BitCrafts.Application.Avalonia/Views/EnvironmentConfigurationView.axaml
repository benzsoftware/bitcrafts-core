<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:data="clr-namespace:BitCrafts.Infrastructure.Abstraction.Services;assembly=BitCrafts.Infrastructure.Abstraction"
             xmlns:loading="clr-namespace:BitCrafts.Application.Avalonia.Controls.Loading;assembly=BitCrafts.Application.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BitCrafts.Application.Avalonia.Views.EnvironmentConfigurationView">
    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Environnements disponibles" FontWeight="Bold" Margin="0,0,0,5" />
                <ComboBox x:Name="EnvironmentsComboBox"
                          SelectionChanged="EnvironmentsComboBox_OnSelectionChanged"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock x:DataType="data:EnvironmentConfiguration"
                                       Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button x:Name="UseSelectedEnvironmentButton"
                        Content="Utiliser cet environnement"
                        Margin="0,0,0,10" Padding="10,5"
                        HorizontalAlignment="Left" />
            </StackPanel>

            <Border Grid.Row="1"
                    BorderBrush="DarkSlateGray"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Créer/Modifier un environnement"
                               FontWeight="Bold" Margin="0,0,0,10" />

                    <Grid Grid.Row="1" Margin="0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Margin="0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DescriptionTextBox" Margin="0,5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type d'environnement:" VerticalAlignment="Center" />
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="EnvironmentTypeComboBox" Margin="0,5"
                                  HorizontalAlignment="Stretch" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Type de base de données:"
                                   VerticalAlignment="Center" />
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="DatabaseTypeComboBox" Margin="0,5"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding .}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Chaîne de connexion:" VerticalAlignment="Center" />
                        <Grid Grid.Row="4" Grid.Column="1" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="ConnectionStringTextBox" />
                            <Button Grid.Column="1" x:Name="TestConnectionButton" Content="Tester" Margin="5,0,0,0" />
                        </Grid>

                        <CheckBox Grid.Row="5" Grid.Column="1" x:Name="IsDefaultCheckBox"
                                  Content="Définir comme environnement par défaut" Margin="0,10,0,5" />

                        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="NewEnvironmentButton" Content="Nouveau"
                                    Click="NewEnvironmentButton_OnClick"
                                    Margin="0,0,5,0"
                                    Padding="10,5" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Button Grid.Row="2" x:Name="CloseButton" Content="Fermer" Click="CloseButton_OnClick"
                    HorizontalAlignment="Right" Margin="0,10,0,0" Padding="20,5" />

            <Grid Grid.Row="0" Grid.RowSpan="3" Margin="-24" x:Name="LoadingControl" IsVisible="False">
               <loading:LoadingControl x:Name="BusyControl" />
            </Grid>
        </Grid>
    </Border>
</UserControl>